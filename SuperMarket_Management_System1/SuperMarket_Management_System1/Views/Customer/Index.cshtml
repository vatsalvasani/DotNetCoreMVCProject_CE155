@model IEnumerable<SuperMarket_Management_System1.Models.Customer>

@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <h1>Customer</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CustomerId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Customer_Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Type)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Last_Purchase)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Total_Purchase)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Mobile)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>

                    <th>
                        <a asp-action="AddOrEdit" class="btn btn-sm btn-success">
 New
                        </a>
                    </th>
                    <th>
                        <a asp-action="Mail1" class="btn btn-sm btn-success">
                             All Mail
                        </a>
                    </th>
                    <th>
                        <a asp-action="Mail2" class="btn btn-sm btn-success">
                             Silver Mail
                        </a>
                    </th>
                    <th>
                        <a asp-action="Mail3" class="btn btn-sm btn-success">
                           Golden Mail
                        </a>
                    </th>
                    <th>
                        <a asp-action="Mail4" class="btn btn-sm btn-success">
                            Platinium Mail
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Customer_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Last_Purchase)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Total_Purchase)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Mobile)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            <form asp-action="Delete" asp-route-id="@item.CustomerId">
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="AddOrEdit" asp-route-id="@item.CustomerId" class="btn btn-warning">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                        Update
                                    </a>
                                    <button type="submit" class="btn btn-danger"
                                        onclick="return confirm('Are you sure to delete this record?')">
                                        <i class="far fa-trash-alt"></i>
                                        Delete
                                    </button>
                                </div>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
